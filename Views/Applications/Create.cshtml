@model CourseApp.Models.Application

@{
    ViewData["Title"] = "Create";
}

@* 
<h1>Create</h1>

<h3>Application</h3>
<hr /> *@

@Html.ValidationSummary(false, "", new { @class = "text-danger"} )

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div id="course-section">
                <h4> Course </h4>
                <div id="course-data">
                    <div class="form-group">
                        <label class="control-label required">Name</label>
                        <select class="form-control" id="course-id-select"
                            data-url="@Url.Action("GetCourse", "CoursesAPI")" asp-items="ViewBag.CourseId"></select>
                    </div>
                    <div class="form-group">
                        <label asp-for="CourseDateId" class="control-label">Date</label>
                        <select asp-for="CourseDateId" class="form-control" id="course-date-options"
                            asp-items="ViewBag.CourseDateId">
                        </select>
                    </div>
                </div>
            </div>
            <div id="company-section">
                <h4>Company</h4>
                <div id="company-data">
                    <div class="form-group" id="company-name">
                        <label asp-for="CompanyName" class="control-label required">Name</label>
                        <input asp-for="CompanyName" class="form-control" />
                        <span asp-validation-for="CompanyName" class="text-danger"></span>
                    </div>
                    <div id="phone-email">
                        <div class="form-group">
                            <label asp-for="PhoneNumber" class="control-label required">Phone</label>
                            <input asp-for="PhoneNumber" class="form-control" />
                            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Email" class="control-label required">Email</label>
                            <input asp-for="Email" class="form-control" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="form-group" id="application-create-btn">
                    <input type="submit" value="Add a company" class="btn btn-primary" />
                </div>
            </div>
        </form>
    </div>
</div>

